{
  "name": "payment-service",
  "version": "1.0.0",
  "description": "This project contains source code and supporting files for a serverless application that you can deploy with the SAM CLI. It includes the following files and folders.",
  "main": "index.js",
  "module": "node",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "symlink:linux": "mkdir -p .symlinks && ln -sFfT \"$(realpath ${PWD}/../graphql-service/apollo)\" .symlinks/graphql-service",
    "symlink:mac": "mkdir -p .symlinks && ln -sFh \"$(realpath ${PWD}/../graphql-service/apollo)\" .symlinks/graphql-service",
    "symlink": "(npm run symlink:mac) || (npm run symlink:linux)",
    "gen": "graphql-codegen --config codegen.yml && prettier -w ./__generated__",
    "prebuild": "(npm run symlink) && (npm run gen) && (tsc --noEmit)",
    "build:x86": "(npm run prebuild) && (sam build)",
    "build:arm": "(npm run prebuild) && (sam build --parallel)",
    "build": "npm run build:arm",
    "deploy": "npm run build && sam deploy",
    "deploy:live": "npm run build && sam deploy --config-env live",
    "stripe": "stripe listen --forward-to https://api.v2.payment.fastchargeapi.com/accept-stripe-payment -e 'checkout.session.completed,checkout.session.expired,checkout.session.async_payment_succeeded,checkout.session.async_payment_failed' & stripe listen --forward-to https://api.v2.payment.fastchargeapi.com/finish-stripe-onboard -e 'account.updated'",
    "logs": "sam logs --stack-name dev-payment-service --tail",
    "start": "npm run build && sam local start-api -p 3000 --warm-containers lazy",
    "watch": "nodemon -e ts,graphql,yml,yaml -i __generated__ --signal SIGINT -x 'npm run typecheck'",
    "test": "jest",
    "fix": "eslint --fix ./",
    "typecheck": "npm run gen && tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.7.9",
    "@apollo/server": "^4.3.1",
    "@as-integrations/aws-lambda": "^2.0.0",
    "@aws-sdk/client-dynamodb": "^3.258.0",
    "@aws-sdk/client-sqs": "^3.272.0",
    "@aws-sdk/util-dynamodb": "^3.288.0",
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@types/uuid": "^9.0.1",
    "chalk": "^5.2.0",
    "dataloader": "^2.1.0",
    "decimal.js-light": "^2.5.1",
    "dynamoose": "github:ylilarry/dynamoose#dist",
    "dynamoose-logger": "^3.1.0",
    "dynamoose-utils": "^3.1.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.1",
    "jsonwebtoken": "^9.0.0",
    "object-hash": "^3.0.0",
    "stripe": "^11.14.0",
    "uuid": "^9.0.0",
    "@aws-sdk/client-rds-data": "^3.344.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@graphql-codegen/cli": "^2.16.5",
    "@graphql-codegen/client-preset": "^2.0.0",
    "@graphql-codegen/typescript": "^2.8.7",
    "@graphql-codegen/typescript-operations": "^3.0.0",
    "@graphql-codegen/typescript-resolvers": "^2.7.12",
    "@jest/globals": "^29.4.3",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/object-hash": "^3.0.2",
    "babel-jest": "^29.4.3",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.3",
    "react": "^18.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
