{
    "name": "graphql-service",
    "version": "1.0.0",
    "description": "",
    "main": "index.ts",
    "type": "module",
    "module": "node",
    "scripts": {
        "gen": "graphql-codegen --config codegen.yml",
        "prebuild": "npm run typecheck",
        "build": "npx ts-node-esm --experimentalSpecifierResolution=node build.ts",
        "prestart": "npm run build",
        "start": "(TRUST_X_USER_PK_HEADER=1 TRUST_X_USER_EMAIL_HEADER=1 TRUST_X_IS_SERVICE_REQUEST_HEADER=1 node --enable-source-maps ./dist/devserver.cjs) || exit 1",
        "watch": "npx nodemon --config ./.nodemon.config.json -x \"npm run start\"",
        "test": "jest",
        "coverage": "npm run test -- --coverage --runInBand",
        "sam": "cd ../ && make watch",
        "fix": "eslint --fix ./",
        "pretypecheck": "npm run gen",
        "typecheck": "tsc --noEmit",
        "start:sqs": "npx ts-node-esm --experimentalSpecifierResolution=node ./dev-sqs-server.ts",
        "watch:sqs": "npx nodemon --config ./.nodemon.config.json -x \"npm run start:sqs\"",
        "crosstypecheck": "(npm run typecheck) & (cd $WS_DIR/payment-service && npm run typecheck) & (cd $WS_DIR/auth-service && npm run typecheck) & (cd $WS_DIR/fastchargeapi-cli && npm run typecheck) & (cd $WS_DIR/gateway-service && npm run typecheck) && wait && echo All good!",
        "watch:crosstypecheck": "npx nodemon --config ./.nodemon.config.json -x \"npm run crosstypecheck\"",
        "crosscheck": "(npm run typecheck) && (cd $WS_DIR/payment-service && npm run test) && (cd $WS_DIR/auth-service && npm run test) && (cd $WS_DIR/fastchargeapi-cli && npm run test) && (cd $WS_DIR/gateway-service && npm run test) && echo All good!"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@apollo/client": "^3.7.15",
        "@apollo/server": "^4.9.2",
        "@as-integrations/aws-lambda": "^2.0.0",
        "@aws-sdk/client-dynamodb": "^3.258.0",
        "@aws-sdk/client-rds-data": "^3.335.0",
        "@aws-sdk/client-secrets-manager": "^3.347.1",
        "@aws-sdk/client-sqs": "^3.272.0",
        "@aws-sdk/util-dynamodb": "^3.288.0",
        "@aws/dynamodb-data-mapper": "^0.7.3",
        "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
        "@types/uuid": "^9.0.1",
        "chalk": "^5.2.0",
        "dataloader": "^2.1.0",
        "decimal.js-light": "^2.5.1",
        "dynamoose": "github:yuliswe/dynamoose#dist",
        "dynamoose-logger": "^3.1.0",
        "dynamoose-utils": "^3.1.0",
        "graphql": "github:yuliswe/graphql-js#larry-hotfix",
        "graphql-scalars": "^1.20.1",
        "jsonwebtoken": "^9.0.0",
        "node-fetch": "^2.6.11",
        "object-hash": "^3.0.0",
        "react": "^18.2.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@graphql-codegen/cli": "^2.16.5",
        "@graphql-codegen/client-preset": "^2.0.0",
        "@graphql-codegen/typescript": "^2.8.7",
        "@graphql-codegen/typescript-operations": "^3.0.0",
        "@graphql-codegen/typescript-resolvers": "^2.7.12",
        "@jest/globals": "^29.4.3",
        "@types/jest": "^29.4.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^18.11.18",
        "@types/object-hash": "^3.0.2",
        "babel-jest": "^29.4.3",
        "jest": "^29.4.3",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
