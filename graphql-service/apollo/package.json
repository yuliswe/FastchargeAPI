{
  "name": "graphql-service",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "gen": "graphql-codegen --config codegen.yml && prettier -w ./__generated__",
    "build": "npm run gen && tsc",
    "start": "node --experimental-specifier-resolution=node ./dist/devserver.js",
    "watch": "npx nodemon -e yml,ts,graphql,json -i ./__generated__ --signal SIGINT -x \"npm run build && npm run start || exit 1\"",
    "test": "jest --runInBand",
    "sam": "cd ../ && make watch",
    "fix": "eslint --fix ./",
    "typecheck": "npm run gen && tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.7.9",
    "@apollo/server": "^4.3.1",
    "@as-integrations/aws-lambda": "^2.0.0",
    "@aws-sdk/client-dynamodb": "^3.258.0",
    "@aws-sdk/client-sqs": "^3.272.0",
    "@aws-sdk/util-dynamodb": "^3.288.0",
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@types/uuid": "^9.0.1",
    "chalk": "^5.2.0",
    "dataloader": "^2.1.0",
    "decimal.js-light": "^2.5.1",
    "dynamoose": "github:ylilarry/dynamoose#dist",
    "dynamoose-logger": "^3.1.0",
    "dynamoose-utils": "^3.1.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.1",
    "jsonwebtoken": "^9.0.0",
    "object-hash": "^3.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@graphql-codegen/cli": "^2.16.5",
    "@graphql-codegen/client-preset": "^2.0.0",
    "@graphql-codegen/typescript": "^2.8.7",
    "@graphql-codegen/typescript-operations": "^3.0.0",
    "@graphql-codegen/typescript-resolvers": "^2.7.12",
    "@jest/globals": "^29.4.3",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/object-hash": "^3.0.2",
    "babel-jest": "^29.4.3",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
