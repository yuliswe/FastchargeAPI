{
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": ["-l", "--init-file", "${workspaceFolder}/devenv.bash"],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": ["-l"],
      "env": {
        "ZDOTDIR": "${workspaceFolder}"
      }
    },
    "fish": {
      "path": "fish",
      "args": ["-l"]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "files.exclude": {
    ".nodevenv": true,
    ".venv": true,
    ".zcompdump": true,
    ".zsh_history": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.pytest_cache": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "python.analysis.typeCheckingMode": "basic",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.unusedImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.autoComplete.extraPaths": [],
  "coverage-gutters.coverageFileNames": [
    "graphql-service/apollo/.coverage/lcov.info",
    "payment-service/.coverage/lcov.info"
  ],
  "coverage-gutters.coverageBaseDir": ".",
  "koverage.coverageFileNames": ["lcov.info"],
  "koverage.coverageFilePaths": ["graphql-service/apollo/.coverage/", "payment-service/.coverage/"],
  "eslint.options": {
    "cache": true
  },
  "eslint.onIgnoredFiles": "warn",
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "search.exclude": {
    "**/.coverage": true,
    "**/build": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/build/**": true,
    "**/dist/**": true
  },
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "javascript.preferences.importModuleSpecifierEnding": "minimal",
  "python.analysis.autoImportCompletions": true,
  "typescript.preferences.preferTypeOnlyAutoImports": true
}
